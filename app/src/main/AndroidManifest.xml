<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atv.com.project.youtubeapi" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/YouTubeAPI" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".YouTubeFragmentActivity"></activity>
        <activity
            android:name=".YouTubeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CustomLightboxActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.Translucent"></activity>
        <activity android:name=".CustomYouTubeControlsActivity"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="AIzaSyA34h-7yPCNSBkBdJ9cAhLHozGn4JwHtWs" />
    </application>

</manifest>
